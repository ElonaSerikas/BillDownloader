{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true  // 支持Electron主进程的Node.js环境
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "settings": {
    "react": {
      "version": "detect"  // 自动检测React版本
    }
  },
  "rules": {
    "react/prop-types": "off",  // 若用TypeScript可关闭
    "react/react-in-jsx-scope": "off"  // React 18+无需手动引入React
  }
}