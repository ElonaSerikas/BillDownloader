{
  "name": "bili-downloader",
  "version": "1.0.0",
  "description": "A tool for downloading Bilibili videos",
  "author": "Your Name",
  "license": "MIT",
  "private": true,
  "main": "src/main/main.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev:renderer": "vite --config src/renderer/vite.config.js",
    "dev:main": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "build:renderer": "vite build --config src/renderer/vite.config.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "npm run build:renderer && electron-builder",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "build": {
    "appId": "com.bilidownloader.app",
    "productName": "BiliDownloader",
    "asar": true,
    "compression": "maximum",
    "files": [
      "src/main/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/*.ts",
      "!node_modules/**/*.tsx"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico",
      "publisherName": "Your Name"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/assets/icon.png",
      "category": "Utility"
    }
  },
  "keywords": [
    "bilibili",
    "downloader",
    "electron",
    "vite"
  ],
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@fluentui/react": "8.111.2",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "electron": "28.0.0",
    "electron-store": "^11.0.2",
    "ffmpeg-static": "5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.2",
    "m3u8-parser": "^7.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "vite": "^7.2.4"
  }
}